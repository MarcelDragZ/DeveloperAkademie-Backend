        "libs/register-confirmation/src/index.ts"
      ],
      "@videoflix/register/register": ["libs/register/register/src/index.ts"],
      "@videoflix/small-preview": ["libs/small-preview/src/index.ts"],
      "@videoflix/upload": ["libs/upload/src/index.ts"],
      "@videoflix/video-list": ["libs/video-list/src/index.ts"],
      "@videoflix/video-player": ["libs/video-player/src/index.ts"],
      "@videoflix/videos": ["libs/videos/src/index.ts"]
