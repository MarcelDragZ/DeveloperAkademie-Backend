      ],
      "@videoflix/environments/db": ["libs/environments/db/src/index.ts"],
      "@videoflix/environments/imagefilter": [
        "libs/environments/imagefilter/src/index.ts"
      ],
      "@videoflix/environments/services/auth-intercepter": [
        "libs/environments/services/auth-intercepter/src/index.ts"
      ],
      "@videoflix/footer": ["libs/footer/src/index.ts"],
      "@videoflix/forgot-password": ["libs/forgot-password/src/index.ts"],
